@model ScopeIndiaWebsite.Models.FirstTimeLogin;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
        #CG {
            margin-top: 50px;
        }
    </style>

</head>
<body>
    <div class="col-md-4 card-header" id="CG">
        <div class="">
            <h1 class=" text-center text-dark">Existing Password</h1>
        </div>
        <div class="card-body">
            <form asp-action="ExistingPassword" method="post">
                <div class="row">
                    <div class="form-group">
                        <div class="">
                            <label class="label-control"></label>
                            <input type="password" placeholder="Enter your existing password" asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password"></span> <p class="text-danger">@ViewBag.MS</p>
                        </div>
                    </div>
                </div><br />
                <div>
                    <button type="submit" class="btn  btn-outline-success">Enter</button>
                </div>
            </form>
        </div>
    </div>
    @section Scripts {
        @await Html.PartialAsync("/Views/Shared/_ValidationScriptsPartial.cshtml")
    }
</body>
</html>